<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_base_gray"
    android:orientation="vertical">

    <!-- title -->
    <FrameLayout style="@style/TitleLayout">

        <TextView
            style="@style/TitleTitleTv"
            android:text="@string/auth_title_modify_phone" />

        <ImageButton
            android:id="@+id/btn_back"
            style="@style/TitleBackButton" />

        <View style="@style/TitleBottomLine" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_thirdly"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/auth_tx_new_phone"/>

    <LinearLayout style="@style/AuthModifyInputLy">

        <EditText
            android:id="@+id/et_phone"
            style="@style/AuthModifyInputEt"
            android:hint="@string/auth_hint_input_mobile" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_thirdly"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/auth_tx_verification"/>

    <LinearLayout style="@style/AuthModifyInputLy">

        <EditText
            android:id="@+id/et_verification"
            style="@style/AuthModifyInputEt"
            android:hint="@string/auth_hint_input_verification" />

        <TextView
            android:id="@+id/tv_send_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_accent"
            android:textSize="15dp"
            android:text="@string/auth_action_send_verification"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_thirdly"
        android:textSize="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/auth_tx_pwd"/>

    <LinearLayout style="@style/AuthModifyInputLy">

        <EditText
            android:id="@+id/et_pwd"
            style="@style/AuthModifyInputEt"
            android:inputType="textPassword"
            android:hint="@string/auth_hint_input_pwd"/>

        <View
            android:id="@+id/v_eyes"
            style="@style/AuthInputIcon"
            android:background="@drawable/icon_eyes_off"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_submit"
        style="@style/BtnLarge"
        android:layout_marginTop="40dp"
        android:enabled="false"
        android:text="@string/app_action_submit"/>

</LinearLayout>