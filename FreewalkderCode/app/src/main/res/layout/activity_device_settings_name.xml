<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!-- title -->
    <FrameLayout style="@style/TitleLayout">

        <TextView
            style="@style/TitleTitleTv"
            android:text="@string/device_tx_settings_earphone" />

        <ImageButton
            android:id="@+id/btn_back"
            style="@style/TitleBackButton" />

        <View style="@style/TitleBottomLine" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:background="@drawable/bg_rect_white"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/tv_mostly"
            android:maxLength="8"
            android:background="@null"/>

        <View
            android:id="@+id/v_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/icon_close"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_tx_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:gravity="right"/>

    <Button
        android:id="@+id/btn_save"
        style="@style/BtnLarge"
        android:layout_marginTop="15dp"
        android:text="@string/app_action_save"/>
</LinearLayout>