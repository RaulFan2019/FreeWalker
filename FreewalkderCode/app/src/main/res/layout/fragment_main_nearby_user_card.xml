<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_dialog_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <cn.yy.freewalker.ui.widget.common.CircularImage
                android:id="@+id/iv_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@android:color/white"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="18dp"
                android:textColor="@color/tv_mostly"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <View
                style="@style/NearbyUserCardIcon"
                android:background="@drawable/icon_gender"/>
            <TextView
                android:id="@+id/tv_gender"
                style="@style/NearbyUserCardTv"
                android:layout_width="70dp"/>

            <View
                style="@style/NearbyUserCardIcon"
                android:background="@drawable/icon_age"/>
            <TextView
                android:id="@+id/tv_age"
                style="@style/NearbyUserCardTv"
                android:layout_width="120dp"/>

            <View
                style="@style/NearbyUserCardIcon"
                android:background="@drawable/icon_job"/>
            <TextView
                android:id="@+id/tv_profession"
                style="@style/NearbyUserCardTv"
                android:layout_width="70dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <View
                style="@style/NearbyUserCardIcon"
                android:background="@drawable/icon_like"/>
            <TextView
                android:id="@+id/tv_like"
                style="@style/NearbyUserCardTv"
                android:layout_width="70dp"/>

            <View
                style="@style/NearbyUserCardIcon"
                android:background="@drawable/icon_height"/>
            <TextView
                android:id="@+id/tv_height"
                style="@style/NearbyUserCardTv"
                android:layout_width="120dp"/>

            <View
                style="@style/NearbyUserCardIcon"
                android:background="@drawable/icon_weight"/>
            <TextView
                android:id="@+id/tv_weight"
                style="@style/NearbyUserCardTv"
                android:layout_width="70dp"/>
        </LinearLayout>

        <View
            style="@style/DividerH"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_shield"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/nearby_action_shield"/>

            <Button
                android:id="@+id/btn_chat"
                style="@style/BtnLarge"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_width="200dp"
                android:text="@string/nearby_action_chat"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/icon_close"
        android:layout_marginEnd="30dp"
        android:layout_gravity="right"/>

</FrameLayout>