<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="ThemeCommonLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ThemeAppStartLoad" parent="ThemeCommonLight">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ThemeFull" parent="ThemeCommonLight">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ThemeDialogActivity" parent="Theme.AppCompat.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!-- 对话框 -->
    <style name="DialogWindowTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/tv_mostly</item>
    </style>

    <style name="DialogWindowTitle.DeviceDefault">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/DialogWindowTitle</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.DeviceDefault</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


</resources>